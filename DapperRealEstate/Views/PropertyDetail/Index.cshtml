                <div class="row">
                    <div class="col-lg-8">
                        <section class="panel">
                            <header class="panel-heading">
                                İlan Ekle
                            </header>
                            <div class="panel-body">
                                <form class="form-horizontal" method="post">
                                    <div class="form-group">
                                        <label for="Name" class="col-lg-1 control-label">Emlak Adı</label>
                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" placeholder="Emlak Adı" asp-for="Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            <section class="panel">
                                                <div class="form">
                                                    <div class="form-group">
                                                        <label class="control-label col-sm-1">Açıklama</label>
                                                        <div class="col-sm-10">
                                                            <textarea class="form-control ckeditor" name="Description" asp-for="Description" rows="10"></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Address" class="col-lg-1 control-label">Adres</label>
                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" placeholder="Adres" asp-for="Address">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Price" class="col-lg-1 control-label">Fiyat</label>
                                        <div class="col-lg-2">
                                            <input type="text" class="form-control" placeholder="Fiyat" asp-for="Price">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Year" class="col-lg-1 control-label">Yıl</label>
                                        <div class="col-lg-2">
                                            <input type="number" class="form-control" placeholder="Fiyat" asp-for="Year">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="BedRooms" class="col-lg-1 control-label">Yatak Odası</label>
                                        <div class="col-lg-2">
                                            <input type="number" class="form-control" placeholder="Yatak Odası" asp-for="BedRooms">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="BathRooms" class="col-lg-1 control-label">Banyo</label>
                                        <div class="col-lg-2">
                                            <input type="number" class="form-control" placeholder="Banyo" asp-for="BathRooms">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Garage" class="col-lg-1 control-label">Otopark</label>
                                        <div class="col-lg-2">
                                            <input type="number" class="form-control" placeholder="Otopark" asp-for="Garage">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Area" class="col-lg-1 control-label">Metrekare</label>
                                        <div class="col-lg-2">
                                            <input type="text" class="form-control" placeholder="Metrekare" asp-for="Area">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="VideoUrl" class="col-lg-1 control-label">Video Url</label>
                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" placeholder="Video Url" asp-for="VideoUrl">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="PropertyHome" class="col-lg-1 control-label">Anasayfaya ekle</label>
                                        <div class="col-lg-10">
                                            <select class="form-control" asp-for="PropertyHome">
                                                <option class="col-lg-2" value="1">Evet</option>
                                                <option class="col-lg-2" value="0">Hayır</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="PropertySlider" class="col-lg-1 control-label">Slidera ekle</label>
                                        <div class="col-lg-10">
                                            <select class="form-control" asp-for="PropertySlider">
                                                <option class="col-lg-2" value="1">Evet</option>
                                                <option class="col-lg-2" value="0">Hayır</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="AgentId" class="col-lg-1 control-label">Emlakçı</label>
                                        <div class="col-lg-10">
                                            <select class="form-control" asp-for="AgentId">
                                                <option selected disabled>Seçiniz</option>
                                                @foreach (var item in ViewBag.Agents)
                                                {
                                                    <option value="@item.AgentId">@item.AgentName</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="LocationId" class="col-lg-1 control-label">Şehir</label>
                                        <div class="col-lg-10">
                                            <select class="form-control" asp-for="LocationId">
                                                <option selected disabled>Seçiniz</option>
